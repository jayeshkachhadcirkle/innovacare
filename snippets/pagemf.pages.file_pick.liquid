{% if page.metafields["pagemf"]["file_pick"] != blank %}
  <div class="custom-field custom-field__file-pick custom-field__type--file-reference">
    <h3 class="custom-field--title">File pick</h3>
    <div class="custom-field--value">
      {% assign type = page.metafields["pagemf"]["file_pick"].value.media_type %}
      {% case type %}
        {% when "image" %}
          {{ page.metafields["pagemf"]["file_pick"].value | image_url: width: 500 | image_tag }}
        {% when "video" %}
          {{ page.metafields["pagemf"]["file_pick"].value | video_tag: image_size: "500x", width: 500, autoplay: false, controls: true }}
        {% else %}
          {% assign file_url = page.metafields["pagemf"]["file_pick"].value.url %}
          <a target="_blank" href="{{ file_url }}">{{ page.metafields["pagemf"]["file_pick"] | media_tag: image_size: "200x" }}</a>
          <div>{{ file_url | split: '/' | last | split: '?v=' | first }}</div>
      {% endcase %}

    </div>
  </div>
{% endif %}