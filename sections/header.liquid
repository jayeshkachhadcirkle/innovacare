<!-- mega menu start here -->
<div class="mega-menu menu-desk-only">
  <div class="mega-menu-wrapper">
    <div class="mega-menu-category-block">
      <ul>
        {% for link in linklists['innovacare-main-menu'].links %}
          {% assign iscurruntli = '' %}
          {% if forloop.index == 1 %}
            {% assign iscurruntli = 'current' %}
          {% endif %}
          <li data-tab="{{ link.handle }}" class="{{ iscurruntli }}">
            <a role="link" aria-disabled="true">
              {{ link.title | default: 'Empty' }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
    <div class="mega-menu-category-submenu">
      {% for link in linklists['innovacare-main-menu'].links %}
        {% assign iscurrunt = '' %}
        {% if forloop.index == 1 %}
          {% assign iscurrunt = 'current' %}
        {% endif %}
        {% assign data_id = link.handle %}
        <div id="{{ data_id }}" class="mega-menu-tabs {{ iscurrunt }}">
          {% for block in section.blocks %}
            {% assign linker = block.settings.linkto | handleize %}
            {% if data_id == linker %}
              {% for cap in (1..6) %}
                {% capture menuid %}menu{{ forloop.index }}{% endcapture %}
                {% if block.settings[menuid].links.size > 9 %}
                  {% assign classer = 'big-grid-50' %}
                {% else %}
                  {% assign classer = '' %}
                {% endif %}
                {% if block.settings[menuid] != blank %}
                  <div class="category-submenu {{ classer }} ">
                    <div class="category-submenu-title">
                      {{ block.settings[menuid].title }}
                    </div>
                    <ul>
                      {% for link in block.settings[menuid].links %}
                        <li>
                          <a
                            {% if link.url.size > 1 %}
                              href="{{ link.url }}"
                            {% else %}
                              role="link" aria-disabled="true"
                            {% endif %}
                          >
                            {{ link.title }}
                          </a>
                        </li>
                      {% endfor %}
                    </ul>
                  </div>
                {% endif %}
              {% endfor %}

              {% break %}
            {% else %}
              {% if forloop.last %}
                <div class="category-submenu-title">{{ link.title }} Tab</div>
              {% endif %}
            {% endif %}
          {% endfor %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>
<!-- mega menu end here -->

