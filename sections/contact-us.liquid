<section class="contact-wrapper">
  <div class="container">
    <div class="contact-grid">
      <div class="contact-form-block">
        <div class="section-title">
          <h2>{{ 'contact.form.get_in' | t }}</h2>
          <div class="subtitle">{{ 'contact.form.how_can' | t }}</div>
        </div>

        {%- form 'contact', id: 'ContactForm' -%}
          {%- if form.posted_successfully? -%}
            <h2 class="form-status form-status-list form__messager" tabindex="-1" autofocus>
              {{- 'icon-success.svg' | inline_asset_content -}}
              {{ 'contact.form.successfull' | t }}
            </h2>
          {%- elsif form.errors -%}
            <div class="form__messager">
              <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>
                {{- 'icon-error.svg' | inline_asset_content -}}
                {{ 'contact.form.error' | t }}
              </h2>
            </div>
            <ul class="form-status-list caption-large" role="list">
              <li>
                <a href="#ContactForm-email" class="link">
                  {{ form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email }}
                </a>
              </li>
            </ul>
          {%- endif -%}
          <div class="contact__fields">
            <input
              style="display:none;"
              autocomplete="name"
              type="text"
              id="ContactForm-name"
              name="contact[name]"
              value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
              placeholder="Name"
            >
            <div class="field form-group half">
              <input
                type="text"
                id="fName"
                name="fName"
                placeholder="{{ 'contact.form.first_name' | t }}"
              >
            </div>
            <div class="field form-group half">
              <input
                type="text"
                id="lName"
                name="lName"
                placeholder="{{ 'contact.form.last_name' | t }}"
              >
            </div>
            <div class="field field--with-error form-group half">
              <input
                autocomplete="email"
                type="email"
                id="ContactForm-email"
                name="contact[email]"
                spellcheck="false"
                autocapitalize="off"
                value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                aria-required="true"
                {% if form.errors contains 'email' %}
                  aria-invalid="true"
                  aria-describedby="ContactForm-email-error"
                {% endif %}
                placeholder="{{ 'contact.form.i_mail' | t }}"
              >

              {%- if form.errors contains 'email' -%}
                <small class="contact__field-error" id="ContactForm-email-error">
                  <span class="visually-hidden">{{ 'contact.form.mailerror' | t }}</span>
                  <span class="form__message">
                    <span class="svg-wrapper">
                      {{- 'icon-error.svg' | inline_asset_content -}}
                    </span>
                    {{- form.errors.translated_fields.email | capitalize }}
                    {{ form.errors.messages.email -}}
                  </span>
                </small>
              {%- endif -%}
            </div>
            <div class="field form-group half">
              <input
                type="tel"
                id="ContactForm-phone"
                autocomplete="tel"
                name="contact[Phone number]"
                pattern="[0-9\-]*"
                value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
                placeholder="{{ 'contact.form.i_phone' | t }}"
              >
            </div>
          </div>
          <div class="field form-group">
            <textarea
              rows="10"
              id="ContactForm-body"
              name="contact[Comment]"
              placeholder="{{ 'contact.form.i_comment' | t }}"
            >
          {{- form.body -}}
        </textarea>
          </div>
          <div class="contact__button submit-btn">
            <button type="submit" class="button">{{ 'cart.general.submit' | t }}</button>
          </div>
        {%- endform -%}
      </div>
      <div class="contact-black-box">
        <div class="contact-black-box-wrapper">
          <div class="black-box-item">
            {% render 'icons', icon_type: 'map' %}
            <div class="black-box-content">
              <h3>{{ 'contact.form.address' | t }} :</h3>
              <p>
                {{ shop.address.address1 -}}
                <br>
                {{ shop.address.address2 -}}
                <br>
                {{ shop.address.city }},{{ shop.address.zip }}
              </p>
            </div>
          </div>
          <div class="black-box-item">
            {% render 'icons', icon_type: 'mail' %}
            <div class="black-box-content">
              <h3>{{ 'contact.form.mailat' | t }} :</h3>
              <p>
                <a href="mailto:{{ shop.email }}"> {{ shop.email }} </a>
              </p>
            </div>
          </div>
          <div class="black-box-item">
            {% render 'icons', icon_type: 'call' %}
            <div class="black-box-content">
              <h3>{{ 'contact.form.callat' | t }} :</h3>
              <p>
                <a href="tel: {{ shop.phone }}">
                  Tel: <span class="callus">{{ shop.phone }}</span>
                </a>
              </p>
              <p>
                <a href="tel: {{ settings.tel2 }}">
                  Org.nr: <span class="callus">{{ settings.tel2 }}</span>
                </a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% javascript %}
  document.getElementById('fName').addEventListener("input", fullName);
  document.getElementById('lName').addEventListener("input", fullName);

  function fullName(){
      let fullname = document.getElementById('fName').value + " " +document.getElementById('lName').value
      document.getElementById('ContactForm-name').value = fullname
  }
{% endjavascript %}

{% stylesheet %}
  .contact__fields {
    display: flex;
    flex-wrap: wrap;
  }

  .contact-grid {
    position: relative;
  }

  .form__messager {
    position: absolute;
    font-size: larger;
    bottom: 5px;
    left: 5px;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Contact Us",
  "settings": []
}
{% endschema %}
