{% endjavascript %}

{% schema %}
{
  "name": "Detail Split Section",
  "max_blocks": 2,
  "blocks": [
    {
      "type": "data_block",
      "name": "Data Block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Block Heading"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "html",
          "id": "content_html",
          "label":"Custom HTML"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Heading"
    },
    {
      "type": "checkbox",
      "id": "withbg",
      "label": "Section Background"
    }

  ],
  "presets": [
    {
      "name":"Detail Split Section"
    }
  ]
}
{% endschema %}
