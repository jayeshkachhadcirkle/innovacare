{% stylesheet %}
  .home-subscribe-section {
    margin: 20px 0;
  }
{% endstylesheet %}

<section class="home-subscribe-section">
  <div class="container">
    <div class="home-subscribe-inner pt-50 pb-50 flex align-center">
      <div class="home-subscribe-left">
        {% if section.settings.bigtext != blank %}
          <h5>{{ section.settings.bigtext }}</h5>
        {% endif %}
        {% if section.settings.smalltext != blank %}
          <h6>{{ section.settings.smalltext }}</h6>
        {% endif %}
      </div>
      <div class="home-subscribe-right flex justify-end">
        {%- form 'customer', id: 'ContactFooter', class: 'subscribe-form' -%}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="form-group">
            <input
              id="NewsletterForm--{{ section.id }}"
              type="email"
              name="contact[email]"
              value="{{ form.email }}"
              aria-required="true"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              {% if form.errors %}
                autofocus
                aria-invalid="true"
                aria-describedby="ContactFooter-error"
              {% elsif form.posted_successfully? %}
                aria-describedby="ContactFooter-success"
              {% endif %}
              placeholder="{{ 'customer.newsletter.placeholder' | t }}"
              required
            >
            <label class="field__label" for="NewsletterForm--{{ section.id }}"> </label>
            <button
              type="submit"
              class="btn-primary"
              name="commit"
              id="Subscribe"
              aria-label="{{ 'newsletter.button_label' }}"
              style="background-color: {{ section.settings.buttonbg }}"
            >
              {{ section.settings.button_text }}
              <span class="svg-wrapper">
                {{- 'icon-arrow.svg' | inline_asset_content -}}
              </span>
            </button>
            {%- if form.errors -%}
              <small class="newsletter-form__message form__message" id="ContactFooter-error">
                <span class="svg-wrapper">
                  {{- 'icon-error.svg' | inline_asset_content -}}
                </span>
                {{- form.errors.translated_fields.email | capitalize }}
                {{ form.errors.messages.email -}}
              </small>
            {%- endif -%}
          </div>
          {%- if form.posted_successfully? -%}
            <h3
              class="newsletter-form__message newsletter-form__message--success form__message"
              id="ContactFooter-success"
              tabindex="-1"
              autofocus
            >
              <span class="svg-wrapper">
                {{- 'icon-success.svg' | inline_asset_content -}}
              </span>
              {{- 'customer.newsletter.form_success' | t }}
            </h3>
          {%- endif -%}
        {%- endform -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Subscribe Form",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "bigtext",
      "label": "Form Title"
    },
    {
      "type": "text",
      "id": "smalltext",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default":"Subscribe"
    },
    {
      "type": "color",
      "id": "buttonbg",
      "label": "Button Color"
    }
  ]
  
}
{% endschema %}
